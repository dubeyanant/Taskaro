<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/screen_margin_horizontal"
    tools:context=".activities.OnboardScreen">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/onBoarding_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/onBoard_linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="67dp"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/onBoard_Skip_Button"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/md_theme_light_primaryContainer"
            android:fontFamily="@font/inter_semibold"
            android:paddingVertical="12dp"
            android:text="@string/skip"
            android:textColor="@color/md_theme_light_shadow"
            android:textSize="20sp" />

        <View
            android:id="@+id/tempView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/onBoard_Next_Button"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:paddingVertical="12dp"
            android:text="@string/next"
            android:textSize="20sp" />

    </LinearLayout>
</LinearLayout>