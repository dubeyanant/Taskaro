<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/screen_margin_horizontal"
    android:layout_marginVertical="@dimen/screen_margin_vertical"
    android:orientation="vertical"
    tools:context=".activities.WelcomeScreen">

    <Button
        android:id="@+id/skipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/skip" />

    <ImageView
        android:id="@+id/welcomeImageView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/welcome" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/welcomeHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="@string/welcome"
            android:textSize="36sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:src="@drawable/all_squares" />
    </LinearLayout>

    <TextView
        android:id="@+id/welcomeScreenTagTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcomeScreenTagLine"
        android:textSize="37sp" />

    <TextView
        android:id="@+id/welcomeScreenDesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="@string/welcomeScreenDescription"
        android:textSize="16sp" />

    <Button
        android:id="@+id/welcomeScreenButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/welcomeScreenButton"
        android:textSize="20sp" />

</LinearLayout>