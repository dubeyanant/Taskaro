<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/onBoard_Resource"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/onBoard_RImageView"
        android:layout_width="wrap_content"
        android:layout_height="480dp"
        android:layout_marginTop="-60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pic_success" />

    <TextView
        android:id="@+id/onBoard_RTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:text="@string/do_it"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/onBoard_RTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/inter"
        android:gravity="center_horizontal"
        android:text="@string/do_it_description"
        android:textSize="16sp" />
</LinearLayout>