<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/onBoard_Resource"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/onBoard_RImageView"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:src="@drawable/doit" />

    <TextView
        android:id="@+id/onBoard_RTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:text="@string/do_it_description"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/onBoard_RTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/do_it"
        android:layout_marginBottom="60dp"
        android:textSize="36sp"
        android:textStyle="bold" />

</LinearLayout>