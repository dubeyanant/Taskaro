<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.forgot_password"
    android:orientation="vertical"
    android:layout_gravity="center">


  <ImageView
      android:layout_width="35dp"
      android:layout_height="35dp"
      android:src="@drawable/group_8"
      android:layout_marginLeft="12dp"
      android:layout_marginTop="24dp">
  </ImageView>


    <ImageView
        android:layout_width="285dp"
        android:layout_height="285dp"
        android:layout_marginTop="124dp"
        android:src="@drawable/ic_forgot_password"
        android:layout_gravity="center_horizontal">
    </ImageView>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:text="Forgot password?"
    android:textColor="@color/md_theme_light_scrim"
    android:textStyle="bold"
    android:textSize="25dp">
  </TextView>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    android:text="Enter your registered email below to\nrecieve password reset instruction"
    android:layout_gravity="center_horizontal"
    android:textColor="#A6A6A6"
      android:layout_marginTop="10dp"
    android:textStyle="bold">
  </TextView>

  <EditText
      android:id="@+id/editText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/email_edit_text"
      android:hint="   Email"
      android:padding="10dp"
      android:layout_marginTop="20dp"
      android:layout_gravity="center_horizontal"
      android:layout_marginLeft="30dp"
      android:layout_marginRight="30dp"
      android:drawableLeft="@drawable/_1444610701574338604_3"
      />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginTop="20dp"
    android:text="Send"
      android:layout_marginLeft="30dp"
      android:layout_marginRight="30dp"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:textSize="18dp"
      android:textColor="@color/md_theme_light_onPrimary"
    android:textStyle="bold"
    android:background="@drawable/forgot_password_send_button">
  </TextView>



</LinearLayout>